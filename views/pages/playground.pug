extends ../base.pug

block variables
  - var template = 'playground'

include ../svg-icons/svg-icons

block content
  include ../partials/page-transition
  include ../partials/toggle-navigation
  .playground.playground__wrapper
    include ../partials/navigation
    .playground__title__container
      .playground__title(data-animation='reveal-bottom')
        h1=playground.data.title 
    .projects__wrapper
      ul
        each item, index in playground.data.projects_list 
          li.marquee__item__wrapper
            a.project__item.external__link(href=item.project_url target='_blank')
              
              .marquee__item__link__wrapper
                  .marquee__item__link(data-animation='reveal-bottom')=item.project_name

              .marquee__item__image 
                img.marquee__img(src=item.project_image.url)

              .marquee__wrapper.project__marquee

                .marquee__content 
                  .marquee__item.marquee__item__details__wrapper
                    .marquee__item__details=item.project_details

                .marquee__content.duplicated
                  .marquee__item.marquee__item__details__wrapper
                    .marquee__item__details=item.project_details
    .archive__bottom__space  
  .mask
    
    






    